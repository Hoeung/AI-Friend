    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:based="clr-namespace:AI_Friend.Support.UI.Units;assembly=AI_Friend.Support"
    xmlns:views="clr-namespace:AI_Friend.Forms.UI.Views">
    <Style
        TargetType="{x:Type views:AI_FriendWindow}"
        BasedOn="{StaticResource {x:Type based:WhiteWindow}}">
        <Setter Property="Content">
            <Setter.Value>
                <TextBlock
                    Text="Window Content!"
                    Foreground="Black"
                    Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>